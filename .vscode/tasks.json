{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Tools",
      "type": "shell",
      "command": "node scripts/generate-tools.js",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "npx -y http-server -p 8080 -c-1",
      "isBackground": true,
      "dependsOn": [
        "Generate Tools"
      ],
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting up http-server",
          "endsPattern": "Hit CTRL-C to stop the server"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    }
  ]
}
